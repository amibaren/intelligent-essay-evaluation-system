# =============================================================================
# 大语言模型配置
# =============================================================================

# OxyGent框架LLM配置（多智能体系统使用）
# 支持OpenAI、Google Gemini、第三方OpenAI兼容API
DEFAULT_LLM_API_KEY=your-api-key-here
DEFAULT_LLM_BASE_URL=https://api.openai.com/v1
DEFAULT_LLM_MODEL_NAME=gpt-4

# langextract模块LLM配置（结构化信息提取使用）
# 可以与OxyGent使用相同配置，也可以单独配置
LANGEXTRACT_API_KEY=your-langextract-api-key-here
LANGEXTRACT_BASE_URL=https://api.openai.com/v1
LANGEXTRACT_MODEL_ID=gemini-2.5-flash

# 注意：langextract会优先使用自己的配置，如果未配置则fallback到DEFAULT_LLM_*

# Anthropic配置 (可选)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# OxyGent配置
OXYGENT_LOG_LEVEL=INFO
OXYGENT_MAX_CONCURRENT_AGENTS=5

# langextract配置
LANGEXTRACT_TIMEOUT=30
LANGEXTRACT_MAX_RETRIES=3

# 应用配置
APP_NAME=AI作文评审小组
APP_VERSION=0.1.0
APP_DEBUG=False
APP_LOG_LEVEL=INFO

# 数据存储配置
DATA_DIR=./data
ESSAYS_DIR=./data/essays
TEMPLATES_DIR=./data/templates
REPORTS_DIR=./data/reports

# UI配置
UI_PORT=8080
UI_HOST=localhost
UI_THEME=light

# 缓存配置
CACHE_ENABLED=True
CACHE_TTL=3600

# 安全配置
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# 性能配置
MAX_ESSAY_LENGTH=5000
MAX_CONCURRENT_EVALUATIONS=3
EVALUATION_TIMEOUT=120

# 日志配置
LOG_DIR=./logs
LOG_ROTATION=1 day
LOG_RETENTION=30 days
LOG_FORMAT=json

# 模板配置
DEFAULT_TEMPLATE=basic_writing
TEMPLATE_CACHE_SIZE=100

# 报告配置
REPORT_FORMAT=markdown
INCLUDE_CHARTS=True
REPORT_LANGUAGE=zh-CN